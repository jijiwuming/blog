.cage-posts {
    width: 80%;
    padding: 20px 20px 20px 40px;
    display: grid;
    row-gap: 20px;
    .cage-post {
        height: 200px;
        overflow: hidden;
        border-radius: 10px;
        background-image: linear-gradient(to top, rgba(16, 16, 16, 0.35) 25%, rgba(16, 16, 16, 0) 100%);
        .post-link {
            display: flex;
            height: 100%;
            width: 100%;
            .cage-post-cover {
                display: flex;
                align-content: center;
                img {
                    max-height: 100%;
                    max-width: 100%;
                }
            }
        }
    }
}